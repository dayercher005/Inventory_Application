<html>
  <head>
    <title>Homepage</title>
    <link rel="stylesheet" href="styles.css">
  </head>
  <body class="homepage">
    <%- include('navbar', {navbarElements: navbarElements}) %>

    <div class="formContainer">

        <p class="formHeader">Update Existing game</p>

        <form class="formContainer" action="/updateGame" method="POST">

          <div class="formGroupContainer">
            <label for="name" class="formLabel">Name of Game *</label>
            <select class="formInput">
                <% GameNames.map(games => { %>
                    <option><%= games.name %></option>
                <% }); %>
            </select>
          </div>

          <div class="formGroupContainer">
            <label for="price" class="formLabel">Price of Game *</label>
            <input type="number" min="0.00" step="0.01" id="price" name="price" class="formInput" required placeholder="0.00"/>
          </div>

          <div class="formGroupContainer">
            <label for="categories" class="formLabel" >Categories</label>

            <div>
              <div class="dropdownContainer">
                <% AvailableCategories.map(categories => { %>
                  <div class="checkboxContainer">
                    <input class="checkboxInput" name="updateCategoryChoice" value="<% categories.category %>" type="checkbox">
                    <span class="checkboxLabel"> <%= categories.category %> </span>
                  </div>
                <% }); %>
                </div>
            </div>
        


          <div class="formDivider"></div>

          <button type="submit" class="formSubmitButton">
            Submit
          </button>
        </form>
    </div>
  </body>
</html>