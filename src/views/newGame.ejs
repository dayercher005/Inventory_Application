<html>
  <head>
    <title>Homepage</title>
    <link rel="stylesheet" href="styles.css">
  </head>
  <body class="homepage">
    <%- include('navbar', {navbarElements: navbarElements}) %>

    <div class="formContainer">

        <p class="formHeader">Add a new game</p>

        <form class="formContainer" action="/newGame" method="POST">

          <div class="formGroupContainer">
            <label for="name" class="formLabel">Name of Game *</label>
            <input type="text" id="name" name="name" class="form-input" required placeholder="Valorant"/>
          </div>

          <div class="formGroupContainer">
            <label for="price" class="formLabel">Price of Game *</label>
            <input type="number" min="0.00" step="0.01" id="price" name="price" class="form-input" required placeholder="0.00"/>
          </div>

          <div class="formGroupContainer">
            <label for="categories" class="formLabel" >Categories</label>

            <div>
              <label>
                <% AvailableCategories.map(categories => { %>
                  <input type="checkbox">
                  <span> <%=categories.category%> </span>
                <% }); %>
              </label>
            </div>
          </div>


          <div class="formDivider"></div>

          <button type="submit" class="formSubmitButton">
            Submit
          </button>
        </form>
    </div>
  </body>
</html>