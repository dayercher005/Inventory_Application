<html>
  <head>
    <title>Homepage</title>
    <link rel="stylesheet" href="styles.css">
  </head>
  <body class="homepage">
    <%- include('navbar', {navbarElements: navbarElements}) %>

    <div class="formContainer">

        <p class="formHeader">Add a new game</p>

        <form class="formContainer">
          <div class="form-group">
            <label for="name" class="form-label">Name of Game *</label>
            <input type="text" id="name" name="name" class="form-input" required placeholder="Valorant"/>
          </div>

          <div class="form-group">
            <label for="price" class="form-label">Price of Game</label>
            <input type="number" min="0.01" step="0.01" id="price" name="price" class="form-input" required placeholder="0.00"/>
          </div>

          <div class="form-group">
            <label for="categories" class="form-label">Categories *</label>
            <select id="subject" name="subject" class="form-select" required>
              <option value="">Select a subject</option>
              <option value="general">General Inquiry</option>
              <option value="support">Technical Support</option>
              <option value="feedback">Feedback</option>
              <option value="other">Other</option>
            </select>
          </div>


          <div class="form-divider"></div>

          <button type="submit" class="form-button">
            Submit
          </button>
        </form>
    </div>
  </body>
</html>